.login {
  background-color: #fff;
  width: 100%;
  background-position: center;
  background-size: cover;
  margin: 0px;
  background-size: 100% 100%;
  background-attachment: fixed;
  height: 1535rpx;
  opacity: 0.8;
}
.login .login-title {
  padding-top: 150rpx;
  display: flex;
  justify-content: flex-start;
  margin-left: 50rpx;
  font-weight: 700;
  font-size: 40rpx;
  color: #11cd6e;
  letter-spacing: 5rpx;
  margin-bottom: 50rpx;
}
.login .login-content .login-username {
  display: flex;
  align-items: center;
  margin: 0 50rpx;
  border-bottom: 1rpx solid gainsboro;
}
.login .login-content .login-username input {
  padding: 10rpx;
  height: 60rpx;
  width: 80%;
}
.login .login-content .login-username ._i {
  color: #11c53e;
  padding-right: 20rpx;
  font-size: 50rpx;
}
.login .login-content .login-password {
  display: flex;
  align-items: center;
  margin: 0 50rpx;
  border-bottom: 1rpx solid gainsboro;
  margin-top: 50rpx;
}
.login .login-content .login-password input {
  padding: 10rpx;
  height: 60rpx;
  width: 80%;
}
.login .login-content .login-password ._i {
  color: #11c53e;
  padding-right: 20rpx;
  font-size: 50rpx;
}
.login .button {
  margin-top: 120rpx;
}
.login .button button {
  background-color: #11c53e;
  width: 90%;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  color: #fff;
}
.login .login-botton {
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}
.login .login-botton .login-password {
  padding: 0 15rpx;
  color: #11c53e;
}
.login .login-botton .login-zhuce {
  padding: 0 15rpx;
  color: #11c53e;
}
.login .login-other {
  position: absolute;
  bottom: 100rpx;
  left: 37%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.login .login-other .login-top {
  text-align: center;
}
.login .login-other .login-icon {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.login .login-other .login-icon image {
  width: 80rpx;
}

